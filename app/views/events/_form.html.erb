<%= form_for(@event, html: { class: "form-horizontal", role: "form" }) do |f| %>

  <%# Alert showing errors for this form %>
  <% if @event.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <%# event_name %>
  <div class="form-group">
    <%= f.label :event_name, class: "col-sm-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :event_name, class: "form-control" %>
    </div>
  </div>


  <%# web_link %>
  <div class="form-group">
    <%= f.label :web_link, class: "col-sm-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :web_link, class: "form-control" %>
    </div>
  </div>


  <%# event_info %>
  <div class="form-group">
    <%= f.label :event_info, class: "col-sm-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :event_info, class: "form-control" %>
    </div>
  </div>

  <%# Submit %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end -%>
