<!DOCTYPE html>
<html>
  <body class="wanderer">


    <nav class="navbar navbar-inverse navbar-fixed-top navbar-expanded nav-landing">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <p class="navbar-brand page-scroll">
                  <%= link_to root_path do %>
                  <%= image_tag("wanderer1.png", class: "img-responsive") %>
                  <% end %>
                </p>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                      <a class="page-scroll" href="#page-top"></a>
                    </li>
                    <li>
                      <a class="page-scroll" href="#about">EVENTS</a>
                    </li>
                    <%- if user_logged_in? %>
                    <li>
                      <a><%= current_user.name.upcase %> </a>
                    </li>
                    <li>
                      <%= link_to "LOGOUT", logout_path, data: { confirm: 'Are you sure?' } %>
                    </li>
                    <%- else %>
                    <li>
                      <%= link_to auth_path(provider: 'facebook') do %>SIGN IN<% end %>
                    </li>
                    <% end %>

                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <section id="about">
        <div class="container-fluid">
            <div class="row text-center">
                <div class="col-lg-12 wow fadeIn">
                    <h1><%= @event.event_name %></h1>
                    <p><%= @event.event_info %></p>
                    <hr class="colored">
                </div>
            </div>
            <div class="row text-center content-row">
              <div class="container">
                <div class="embed-responsive embed-responsive-16by9">
                  <iframe width="560" height="315" src="https://www.youtube.com/embed/8OX-x5j2N4E" frameborder="0" allowfullscreen></iframe>
                </div>
              </div>
              <%= link_to "Please Check out our Site", @event.web_link%>
              <span class="btn btn-primary demo">GRAB PHOTO</span>
            </div>
        </div>
    </section>

    <section>
      <div class="container text-center wow fadeIn">
        <h2>Photos</h2>
          <hr class="colored">
            <div class="row">
              <div class="col-lg-12">
                <div id="portfoliolist">
                  <% @event.photos.each do |photo| %>
                    <% if photo.image_data %>
                      <div class="portfolio">
                        <div class="portfolio-wrapper">
                          <%- if user_logged_in? %>
                          <span data-event-id="<%= @event.id %>" data-photo-id="<%= photo.id %>" class="favorite-photo fa fa-star <%= favorited_class(photo, current_user) %>" aria-hidden="true" style="padding-left:320px;"></span>
                          <% end %>
                          <%= image_tag(photo.image_url(:medium), class: "medium") %>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
    </section>


    <section class="wander-click">
      <div class="row">
        <div class="container text-center">
          <div class="col-md-4 wander-links">

            <h4><%= link_to "New Photo", new_event_photo_path(@event) %></h4>

          </div>
          <div class="col-md-4 wander-links">
              <h4><i class="fa fa-envelope"></i> Get Your Photos</h4>

          </div>
          <div class="col-md-4 wander-links">

              <%= link_to logout_path, data: { confirm: 'Are you sure?' } do %>
              <h4><i class="fa fa-sign-out"></i> Sign Out</h4>
              <% end %>
          </div>

        </div>
      </div>
    </section>

    <footer class="footer">
      <div class="container text-center">
          <div class="row">
              <div class="col-md-4 contact-details">
                  <h4><i class="fa fa-phone"></i> Call</h4>
                  <p>813-210-5528</p>
              </div>
              <div class="col-md-4 contact-details">
                  <%- if admin_logged_in? %>
                  <%= link_to "New Photo", new_event_photo_path(@event) %>
                  <%= link_to signout_path, data: { confirm: 'Are you sure?' } do %>
                  <p><i class="fa fa fa-sign-out"></i>Admin sign out</p>
                  <% end %>
                <%- else %>
                  <%= link_to signin_path do %>
                    <h4><i class="fa fa-clipboard"></i>Admin Sign in</h4>
                  <% end %>
                <% end %>
              </div>
              <div class="col-md-4 contact-details">
                  <h4><i class="fa fa-envelope"></i> Email</h4>
                  <p>
                    <a href="mailto:Justinvalentine88@gmail.com">JustinValentine88@gmail.com</a>
                  </p>
              </div>
          </div>
          <div class="row social">
            <div class="col-lg-12">
                <ul class="list-inline">
                    <li><a href=" https://twitter.com/Jusivxo"><i class="fa fa-twitter fa-fw fa-2x"></i></a>
                    </li>
                    <li><a href="https://www.linkedin.com/in/justin-valentine-171a82b1/"><i class="fa fa-linkedin fa-fw fa-2x"></i></a>
                    </li>
                    <li><a href="https://github.com/Jusixo"><i class="fa fa-github fa-fw fa-2x"></i></a></li>
                </ul>
            </div>
          </div>
          <div class="row copyright">
              <div class="col-lg-12">
                  <p class="small">&copy; <%= Time.now.year %> Justin Valentine </p>
              </div>
          </div>
      </div>
    </footer>
  </body>

</html>
